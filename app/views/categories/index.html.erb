<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% @categories.each do |cat| %>
  <tr>
    <td><%= cat.name %></td>
    <td><%= link_to "Show", cat %></td>
    <td><%= link_to "Edit", edit_category_path(cat) %></td>
    <td><%= link_to "Destroy", cat, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to "New Category", new_category_path %>
